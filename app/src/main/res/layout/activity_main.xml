<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:contentDescription="@string/back_picture" />
    <Button
        android:layout_below="@+id/backIV"
        android:id="@+id/startCaptureBtn"
        android:background="@drawable/bg_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/take_pic_btn_label" />

    <ListView
        android:layout_below="@+id/startCaptureBtn"
        android:id="@+id/list_detected_faces"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:verticalSpacing="5dp" />

</RelativeLayout>